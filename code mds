package minecraftbyexample.mbe10_item_simple;

import net.minecraft.item.ItemGroup;
import net.minecraft.item.Item;

public class ItemSimple extends Item
{
  static private final int MAXIMUM_NUMBER_OF_DOGSS = 12; // maximum stack size
  public ItemSimple()
  {
    super(new Item.Properties().maxStackSize(MAXIMUM_NUMBER_OF_DOGS).group(ItemGroup.MISC) // the item will appear on the Miscellaneous tab in creative
    );
  }
}
